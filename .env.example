# Backend Configuration
PORT=10000
NODE_ENV=production

# Database Configuration (PostgreSQL for production, SQLite for local development)
DB_DIALECT=postgres
DB_URL=postgresql://user:password@localhost:5432/construction_site
# For local development with SQLite, uncomment these and comment the above
# DB_DIALECT=sqlite
# DB_STORAGE=./database.sqlite

# JWT Configuration
JWT_SECRET=your_very_secure_jwt_secret_key_here
JWT_EXPIRES_IN=30d
JWT_REFRESH_EXPIRES_IN=90d

# Frontend URL (for CORS)
FRONTEND_URL=https://your-frontend-render-url.onrender.com

# Upload Configuration
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760 # 10MB

# Email Configuration (if applicable)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your-email@example.com
SMTP_PASS=your-email-password
SMTP_FROM=noreply@example.com

# Render Specific
RENDER=true
RENDER_EXTERNAL_URL=https://your-app-name.onrender.com
