{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "npm install --omit=dev && cd frontend && npm install --omit=dev && npm run build"
  },
  "deploy": {
    "startCommand": "node backend/src/app.js",
    "healthcheckPath": "/health",
    "healthcheckTimeout": 30,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  },
  "routes": [
    {
      "handle": "filesystem",
      "src": "frontend/dist",
      "dest": "/"
    },
    {
      "handle": "filesystem",
      "src": "frontend/dist/index.html",
      "dest": "/"
    },
    {
      "src": "/api/(.*)",
      "dest": "backend/src/app.js"
    }
  ]
}