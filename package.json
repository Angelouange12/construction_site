{
  "name": "construction-site-management",
  "version": "1.0.0",
  "description": "Construction Site Management Application - Burundi",
  "private": true,
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd backend && npm run dev",
    "dev:frontend": "cd frontend && npm run dev",
    "build": "npm run build:frontend",
    "build:frontend": "cd frontend && npm run build",
    "start": "cd backend && npm start",
    "install:all": "npm install && cd backend && npm install && cd ../frontend && npm install",
    "seed": "cd backend && npm run seed",
    "postinstall": "cd frontend && npm install && npm run build && cd ../backend && npm install"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/construction-site-management.git"
  },
  "keywords": [
    "construction",
    "management",
    "burundi",
    "nodejs",
    "react",
    "express"
  ],
  "author": "Your Name",
  "license": "MIT"
}

